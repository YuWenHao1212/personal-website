---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import BlogCategories from '../../components/BlogCategories.astro';
import FeaturedPosts from '../../components/FeaturedPosts.astro';
import ProductCard from '../../components/ProductCard.astro';
import NewsletterForm from '../../components/NewsletterForm.astro';
import AboutSnippet from '../../components/AboutSnippet.astro';

const title = 'WenHao Yu';
const description = '我用 AI 打造產品。分享產品開發、效率系統與人生思考。';

const products = [
  {
    name: 'AI Resume Advisor',
    description: 'AI 驅動的履歷分析工具，幫助你打造更具競爭力的履歷。',
    href: 'https://airesumeadvisor.com',
  },
  {
    name: '更多產品',
    description: '正在開發中的產品與課程，敬請期待。',
    comingSoon: true,
  },
];
---

<BaseLayout title={title} description={description}>
  <Hero />

  <BlogCategories />

  <!-- Featured Posts Section -->
  <section class="py-10 md:py-14 lg:py-16">
    <div class="container-wide">
      <h2 class="text-xl md:text-2xl lg:text-3xl font-bold text-ink-900 mb-6 md:mb-8 text-center">
        精選文章
      </h2>
      <FeaturedPosts limit={6} />
    </div>
  </section>

  <!-- Products Section -->
  <section class="py-10 md:py-14 lg:py-16 bg-cream-50">
    <div class="container-wide">
      <h2 class="text-xl md:text-2xl lg:text-3xl font-bold text-ink-900 mb-6 md:mb-8 text-center">
        我的產品
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 max-w-3xl mx-auto">
        {products.map((product) => (
          <ProductCard {...product} />
        ))}
      </div>
    </div>
  </section>

  <NewsletterForm />

  <AboutSnippet />
</BaseLayout>
