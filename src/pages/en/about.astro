<BaseLayout title={title} description={description}>
  <div class="py-12 md:py-16 lg:py-20">
    <div class="max-w-6xl mx-auto px-6">

      <!-- Hero - Compact -->
      <div class="text-center mb-10 md:mb-14 lg:mb-16">
