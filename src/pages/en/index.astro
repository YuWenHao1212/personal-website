---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import BlogCategories from '../../components/BlogCategories.astro';
import FeaturedPosts from '../../components/FeaturedPosts.astro';
import ProductCard from '../../components/ProductCard.astro';
import NewsletterForm from '../../components/NewsletterForm.astro';
import AboutSnippet from '../../components/AboutSnippet.astro';

const title = 'WenHao Yu';
const description = 'I build products with AI. Sharing insights on building products, productivity & life.';

const products = [
  {
    name: 'AI Resume Advisor',
    description: 'AI-powered resume analysis tool that helps you craft more competitive resumes.',
    href: 'https://airesumeadvisor.com',
    image: '/images/products/ai-resume-advisor.webp',
  },
  {
    name: 'More Products',
    description: 'More products and courses coming soon. Stay tuned!',
    comingSoon: true,
  },
];
---

<BaseLayout title={title} description={description}>
  <Hero />

  <BlogCategories />

  <!-- Featured Posts Section -->
  <section class="py-10 md:py-14 lg:py-16">
    <div class="container-wide">
      <h2 class="text-xl md:text-2xl lg:text-3xl font-bold text-ink-900 mb-6 md:mb-8 text-center">
        Featured Posts
      </h2>
      <FeaturedPosts limit={6} />
    </div>
  </section>

  <!-- Products Section -->
  <section class="py-10 md:py-14 lg:py-16 bg-cream-50">
    <div class="container-wide">
      <h2 class="text-xl md:text-2xl lg:text-3xl font-bold text-ink-900 mb-6 md:mb-8 text-center">
        My Products
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 max-w-3xl mx-auto">
        {products.map((product) => (
          <ProductCard {...product} />
        ))}
      </div>
    </div>
  </section>

  <NewsletterForm />

  <AboutSnippet />
</BaseLayout>
