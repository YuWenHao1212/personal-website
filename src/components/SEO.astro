---
import { getLangFromUrl, getAlternatePath } from '../i18n/utils';

interface FaqItem {
  question: string;
  answer: string;
}

interface Props {
  title: string;
  description: string;
  image?: string;
  article?: boolean;
  publishedTime?: string;
  modifiedTime?: string;
  noindex?: boolean;
  hasAlternate?: boolean;
  ogTitle?: string;
  faq?: FaqItem[];
}

const {
  title,
  description,
  image = '/images/og-default.jpg',
  article = false,
  publishedTime,
  modifiedTime,
  noindex = false,
  hasAlternate = true,
  ogTitle,
  faq,
} = Astro.props;

const lang = getLangFromUrl(Astro.url);
const alternateLang = lang === 'zh-TW' ? 'en' : 'zh-TW';
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const alternateURL = new URL(getAlternatePath(Astro.url), Astro.site);
const ogImage = new URL(image, Astro.site);

const siteName = 'WenHao Yu';
const fullTitle = title === siteName ? title : `${title} | ${siteName}`;
const ogTitleFinal = ogTitle || fullTitle;
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Canonical & Alternate Languages -->
<link rel="canonical" href={canonicalURL} />
<link rel="alternate" hreflang={lang} href={canonicalURL} />
{hasAlternate && (
  <>
    <link rel="alternate" hreflang={alternateLang} href={alternateURL} />
    <link rel="alternate" hreflang="x-default" href={lang === 'zh-TW' ? canonicalURL : alternateURL} />
  </>
)}

<!-- Open Graph / Facebook -->
<meta property="og:type" content={article ? 'article' : 'website'} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={ogTitleFinal} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="800" />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content={lang === 'zh-TW' ? 'zh_TW' : 'en_US'} />
<meta property="og:locale:alternate" content={lang === 'zh-TW' ? 'en_US' : 'zh_TW'} />

{article && publishedTime && (
  <meta property="article:published_time" content={publishedTime} />
)}
{article && modifiedTime && (
  <meta property="article:modified_time" content={modifiedTime} />
)}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={ogTitleFinal} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImage} />

<!-- RSS Feed -->
<link rel="alternate" type="application/rss+xml" title={`${siteName} RSS (${lang})`} href={`/${lang}/rss.xml`} />

<!-- JSON-LD Structured Data -->
{article && publishedTime ? (
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": title,
    "description": description,
    "image": ogImage.href,
    "datePublished": publishedTime,
    "dateModified": modifiedTime || publishedTime,
    "author": {
      "@type": "Person",
      "name": "WenHao Yu",
      "url": "https://yu-wenhao.com"
    },
    "publisher": {
      "@type": "Person",
      "name": "WenHao Yu",
      "url": "https://yu-wenhao.com"
    },
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": canonicalURL.href
    }
  })} />
) : (
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": siteName,
    "url": "https://yu-wenhao.com",
    "author": {
      "@type": "Person",
      "name": "WenHao Yu",
      "url": "https://yu-wenhao.com"
    }
  })} />
)}

{/* FAQ Schema */}
{faq && faq.length > 0 && (
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": faq.map((item) => ({
      "@type": "Question",
      "name": item.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": item.answer,
      },
    })),
  })} />
)}
