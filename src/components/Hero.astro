---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-10 md:py-14 lg:py-20 bg-gradient-to-b from-cream-50 to-cream-100">
  <div class="container-wide">
    <div class="flex flex-col md:flex-row items-center gap-6 md:gap-10 lg:gap-16">
      <!-- Photo -->
      <div class="flex-shrink-0">
        <div class="relative">
          <img
            src="/images/hero.webp"
            alt="WenHao Yu"
            width="280"
            height="280"
            class="w-32 h-32 md:w-48 md:h-48 lg:w-64 lg:h-64 rounded-full object-cover shadow-lg"
            loading="eager"
            fetchpriority="high"
            decoding="async"
          />
          <div class="absolute inset-0 rounded-full ring-4 ring-cream-200 ring-offset-4 ring-offset-cream-50"></div>
        </div>
      </div>

      <!-- Content -->
      <div class="text-center md:text-left">
        <h1 class="text-2xl md:text-4xl lg:text-5xl font-bold text-ink-900 mb-3 md:mb-4 text-balance">
          {t('hero.tagline')}
        </h1>
        <p class="text-base md:text-lg lg:text-xl text-ink-600 mb-5 md:mb-8 max-w-xl">
          {t('hero.description')}
        </p>
        <div class="flex flex-col sm:flex-row gap-3 md:gap-4 justify-center md:justify-start">
          <a href={`/${lang}/about`} class="btn-primary text-sm md:text-base">
            {t('hero.cta.story')}
          </a>
          <a href={`/${lang}/blog`} class="btn-outline text-sm md:text-base">
            {t('hero.cta.posts')}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
