---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const content = {
  'zh-TW': {
    text: '我是 WenHao，我用 AI 打造產品。在這個時代，個人可以創造出以前需要整個團隊才能做到的東西。',
    cta: '閱讀完整故事',
  },
  'en': {
    text: "I'm WenHao, and I build products with AI. In this era, individuals can create what previously required entire teams.",
    cta: 'Read My Full Story',
  },
};
---

<section class="py-24 md:py-32 bg-[#FFFDF9]">
  <div class="max-w-6xl mx-auto px-6">
    <div class="grid md:grid-cols-12 gap-8 md:gap-12 items-center">
      <div class="md:col-span-7">
        <h2 class="text-[2rem] md:text-[2.5rem] font-bold text-[#2C2416] leading-[1.1] tracking-[-0.02em] mb-6">
          {t('section.about')}
        </h2>
        <p class="text-lg text-[#5C5144] mb-8 leading-[1.7]">
          {content[lang].text}
        </p>
        <a
          href={`/${lang}/about`}
          class="inline-flex items-center text-sm font-bold uppercase tracking-wider text-[#2C2416] border-b-2 border-[#2C2416] pb-1 hover:text-[#8B7355] hover:border-[#8B7355] transition-colors"
        >
          {content[lang].cta}
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
