---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const content = {
  'zh-TW': {
    text: '我是 WenHao，一位在 AI 時代實踐一人公司理念的創業者。我相信透過 AI 工具，個人也能創造出有影響力的產品。',
    cta: '閱讀完整故事',
  },
  'en': {
    text: "I'm WenHao, a solo entrepreneur building products in the AI era. I believe that with AI tools, individuals can create impactful products.",
    cta: 'Read My Full Story',
  },
};
---

<section class="py-16">
  <div class="container-narrow">
    <h2 class="text-2xl md:text-3xl font-bold text-ink-900 mb-6 text-center">
      {t('section.about')}
    </h2>

    <div class="bg-cream-50 rounded-2xl p-8 text-center">
      <p class="text-lg text-ink-700 mb-6 max-w-2xl mx-auto">
        {content[lang].text}
      </p>
      <a href={`/${lang}/about`} class="btn-outline">
        {content[lang].cta}
      </a>
    </div>
  </div>
</section>
